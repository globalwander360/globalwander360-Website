Login Page: login.component.scss (Attractive & Professional)

body {
  margin: 0;
  padding: 0;
  font-family: 'Poppins', sans-serif;
  background: linear-gradient(135deg, #667eea, #764ba2);
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
}

.login-container {
  background: rgba(255, 255, 255, 0.15);
  border-radius: 20px;
  padding: 40px 30px;
  width: 100%;
  max-width: 420px;
  backdrop-filter: blur(15px);
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.25);
  color: #fff;
  text-align: center;
  animation: fadeIn 0.6s ease-in-out;
}

.login-container h2 {
  margin-bottom: 20px;
  font-size: 28px;
  font-weight: 600;
}

.login-container form {
  display: flex;
  flex-direction: column;
  gap: 18px;
}

.login-container input {
  padding: 12px 15px;
  border: none;
  border-radius: 12px;
  background: rgba(255, 255, 255, 0.2);
  color: #fff;
  font-size: 15px;
  transition: background 0.3s ease;
}

.login-container input:focus {
  outline: none;
  background: rgba(255, 255, 255, 0.3);
}

.login-container input::placeholder {
  color: #ddd;
}

.login-container button {
  padding: 12px;
  background-color: #ff6f61;
  color: white;
  border: none;
  border-radius: 12px;
  font-weight: bold;
  font-size: 16px;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

.login-container button:hover {
  background-color: #ff3e3e;
}

.error-message {
  margin-top: -10px;
  color: #ffcdd2;
  font-size: 14px;
  background: rgba(255, 0, 0, 0.2);
  padding: 8px;
  border-radius: 8px;
}

.login-container .switch-auth {
  margin-top: 16px;
  font-size: 14px;
  color: #eee;
  cursor: pointer;
  text-decoration: underline;
}

.login-container .switch-auth:hover {
  color: #fff;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(-30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}


