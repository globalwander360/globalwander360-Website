# Custom app config
database.pwd=cyberark_db_pwd

# Server config
server.port=8181
conserto.application.name=conserto

# H2 (file-based) DB config
spring.datasource.url=jdbc:h2:file:./data/storage
spring.datasource.driverClassName=org.h2.Driver
spring.datasource.username=sa
spring.datasource.password=

# Hibernate settings
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.H2Dialect
spring.jpa.hibernate.ddl-auto=update

# H2 Console
spring.h2.console.enabled=true
spring.h2.console.settings.web-allow-others=true
spring.h2.console.path=/h2-uc

# Liquibase
spring.liquibase.enabled=true
spring.liquibase.drop-first=false  # IMPORTANT: set to false so it doesnâ€™t drop data on restart!
spring.liquibase.change-log=classpath:db/changelog/db.changelog-master.xml
